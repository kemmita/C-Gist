#include <stdio.h>
int main() {
    int var = 45;
    //decimal
    printf("int var = %d\n", var);
    //octal
    printf("octal var = %o\n", var);
    //hexadecimal
    printf("hexadecimal var = %x\n ", var);


    //Anything declared with a 0 is considered an octal so 055 will be printed as int 45
    int var1 = 055;
    //decimal
    printf("int var1 = %d\n", var1);
    //octal
    printf("octal var1 = %o\n", var1);
    //hexadecimal
    printf("hexadecimal var1 = %x \n ", var1);


    //This is the hexadecimal version of a.
    int var2 = 0xa;
    //decimal
    printf("int var2 = %d\n", var2);
    //octal
    printf("octal var2 = %o\n", var2);
    //hexadecimal
    printf("hexadecimal var2 = %x ", var2);
    return 0;
}

